/**index.wxss**/
.main{
  padding: 0 52rpx;
  margin-top: -3vh;
}
.title{
  margin-left: 64rpx;
}
.container{
  border-radius: 0 0 34rpx 34rpx;
  background: #F4BC72;
  box-shadow: 0px 6rpx 12rpx #707070;
}
.search{
  margin: 30rpx 0;
  padding-bottom: 100rpx;
}
.main-image{
  position: relative;
  width: calc(100% - 104rpx);
  padding: 0 52rpx;
  height: calc((100vw - 104rpx) * 9 / 19);
  top: -6vh;
}
.main-image>image{
  width: 100%;
  height:100%;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 12rpx #707070;
}
.main-text{
  display: flex;
  align-items: flex-end;
  position: absolute;
  bottom: 20rpx;
  left: 73rpx;
  color: white;
}
.main-text>image{
  margin-right: 20rpx;
  width: 30rpx;
  height: 40rpx;
}
.main-nav{
  margin: 15rpx 0px 0px 0px;
  display: flex;
  align-items: center;
  flex-direction: row;
  justify-content: space-between;
}
.nav-item{
  border-radius: 25rpx;
  width: 146rpx;
  height: 222rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  letter-spacing:16rpx;
  writing-mode: vertical-lr;
  box-shadow: 0px 3px 6px #707070;
}
.nav-item:nth-child(1){
  background-image: url('https://pic.liviolet.site/background/nav-item-1.png') ;
  background-repeat:no-repeat;
  background-size:100% 100%;
}
.nav-item:nth-child(2){
  background-image: url('https://pic.liviolet.site/background/nav-item-2.png');
  background-repeat:no-repeat;
  background-size:100% 100%;
}
.nav-item:nth-child(3){
  background-image: url('https://pic.liviolet.site/background/nav-item-3.png');
  background-repeat:no-repeat;
  background-size:100% 100%;
}
.about-us{
  margin: 50rpx 0px 0px 0;
}
.about-title{
  display: flex;
  align-items: center;
  flex-direction: row;
  padding-bottom:20rpx;

}
.about-title>image{
  width: 74rpx;
  height: 74rpx;
}
.about-content{
  font-size: 36rpx;
}
.about-title>text{
  font-size: 40rpx;
  letter-spacing: 10rpx;
  color: #707070;
  flex: 1;
  text-align: start;
  margin-left: 30rpx;
}
.contact{
  width:130rpx;
  height: 120rpx;
  padding-bottom: 10rpx;
}
.contactView{
  margin-top: -20rpx;
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin-top: 20rpx;
  position: absolute;
  right: 20rpx;
  color:rgba(81, 81, 81, 1);
  font-size: 26rpx;
  text-align: center;
}