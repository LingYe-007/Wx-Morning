/* pages/school.wxss */
.section{
 position: relative;
 top: -30rpx;
 z-index: 999;
}
.head{
  width: 100vw;
  position: fixed;
  background: #F4BC72;
  padding: 20rpx 25rpx;
  border-radius: 0 0 28rpx 28rpx;
  z-index: 1000;
  box-sizing: border-box;
}
ul{
  font-size: 28rpx;
}
.position{
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 35rpx;
  color: white;
  font-weight: 600;
  padding:22rpx 0;
}
.position>image{
  width: 30rpx;
  height: 40rpx;
  padding-right: 16rpx;
}
.container{
  background: white;
  border-radius: 16rpx;
  padding:5rpx 0;
  height: 100%;
  width:calc(100% - 100rpx);
  display: flex;
  justify-content: center;
  align-items: center;
  color: #343035;
  font-size: 26rpx;
}
.container>.image{
  width:22rpx;
  height: 22rpx;

}
input{
  margin-right: -100rpx;
}
.input-placeholder{
  color: rgba(52, 48, 53, 1);
}
.search{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.btn{
  box-sizing: border-box;
  font-size: 26rpx;
  height: 60rpx;
  background:#FFFFFF;
  border-radius: 16rpx;
  /* padding: 0 24rpx; */
  text-align: center;
  word-wrap: nowrap;
  width: 120rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-left: 20rpx;
}
.school{
  padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  box-sizing: border-box;
  padding: 20rpx 0;
  border-bottom: solid 1rpx #707070;
}
.school>image{
  width: 120rpx;
  height: 120rpx;
  padding: 0 30rpx;
}
scroll-view{
  position: absolute;
}