
.container{
  overflow-y: hidden;
  height: 100vh;
  width: 100vw;
}
.main{
  background: #E6E6E6;
  padding:34rpx 34rpx 0 34rpx;
  overflow: hidden;
}
.image{
  width: 108rpx;
  display: flex;
  text-align: center;
  flex-direction: column;
  position: fixed;
  bottom: 25rpx;
  left: 50%;
  transform: translateX(-50%);
  color: rgba(112, 112, 112, 1);
}
.image>image{
  width:108rpx;
  height: 108rpx;
}
.contain{
  position: relative;
  color:rgba(112, 112, 112, 1)
}
.contain>p{
  padding: 40rpx 0 20rpx 0;
  display: block;
}
textarea{
  color:rgba(191, 191, 191, 1);
  border-radius: 36rpx;
  width: 100%;
  height: 50%;
  box-sizing: border-box;
  padding: 40rpx 40rpx 0 40rpx;
  border: solid 1rpx rgb(112,112,112);
}
input{
  color: rgba(205, 205, 205, 1);
  text-decoration:underline;
  padding-bottom: 10rpx;
  border-bottom: solid 1rpx rgb(230,230,230);
}
.contain{
  padding:0rpx 34rpx 0 34rpx;
  background:white;
  height: calc(100vh - 400rpx);
  border-radius: 16rpx;
  border: solid 1rpx rgb(112,112,112);
}
.contain button{
 width: 80%;
 position: absolute;
 bottom: 30rpx;
 left: 50%;
 transform: translateX(-50%);
 background: #FAB923;
}