/* pages/square/square.wxss */
main{
  overflow-y: hidden;
}
main{
  /* box-sizing: border-box; */
  /* padding: 20rpx 0rpx; */
  position: relative;
  margin: 0;
  padding: 0;
  z-index: -1;
  /* background: rgba(155, 140, 133, 1); */
}
.head{
  background: #F4BC72;
}
.active-content{
  padding: 20rpx 0;
  padding-left: 30rpx;
  /* margin-top: 32rpx; */
}
h2::before{
  content: "";
  position: absolute;
  top:75rpx;
  background:#FFD91D;
  width: 70rpx;
  height: 10rpx;
}
.active-1{
  display: flex;
  flex-direction: row;
  position: relative;
  margin-bottom:14rpx ;
}
.active-one{
  background: #E6E6E6;
  position: relative;
  padding-left: 14rpx;
  box-sizing: border-box;
  margin-bottom: 14rpx;
}
.add{
  position: absolute;
  right: 50rpx;
  width: 120rpx;
  height: 120rpx;
}
.user-image-1{
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  box-shadow: 0 6rpx 12rpx #707070;
}

.content-p{
  padding: 22rpx 0;
}
.imgList{
  padding-left: 50rpx;
  width: 100%;
  padding-right: 50rpx;
  box-sizing: border-box;
  padding-bottom: 80rpx;
  display: grid;
  grid-template-columns: repeat(auto-fit,minmax(230rpx,1fr));
  grid-template-rows: repeat(auto-fit,minmax(200rpx,400rpx));
  min-height: 200rpx;
  gap: 30rpx;
}
.img-item>image{
  width: 100%;
  height: 100%;
}
.like-comment{
  position: absolute;
  right: 32rpx;
  bottom: 32rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.like-comment>view{
  display: flex;
  align-items: center;
}
.like{
  margin-right: 15rpx;
  z-index: 999;
}
.like-comment image{
  width: 34rpx;
  height: 34rpx;
  margin: 0 12rpx;
}
.add-comment{
  margin-bottom: 14rpx;
  background:#E6E6E6;
  width: 100vw;
  box-sizing: border-box;
  padding: 20rpx;
}
.add-1{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.input{
  background:white;
  flex: 1;
  border: solid 2rpx rgba(112, 112, 112, 1);
  border-radius: 16rpx;
  margin:0 10rpx;
  padding: 10rpx 30rpx;
}
.comt{
  padding: 16rpx 24rpx;
  background:#FFE149;
  color: white;
  border-radius: 16rpx;
  font-size: 24rpx;
  z-index: 999;
}
.active-2{
  padding: 30rpx 0;
  border-bottom: solid 1rpx grey;
}
.active-2>ul{
  margin-left: 116rpx;
}
.img-add{
  position: fixed;
  bottom: 200rpx;
  width: 120rpx;
  height: 120rpx;
  right: 50rpx;
  z-index: 1000;
}
.place{
  position: relative;
  top: -60rpx;
}
.place>text{
  color: grey;
}