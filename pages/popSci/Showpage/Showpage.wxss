/* pages/popSci/Showpage/Showpage.wxss */
.container>image{
  width: 100%;
  height: 25vh;
}
.main{
  padding: 3vh 54rpx 0 54rpx;
}
.main>span{
  display: block;
  font-size: 60rpx;
  position: relative;
}
.main>span::before{
  content: "";
  position: absolute;
  display: block;
  width: 90rpx;
  height: 10rpx;
  background:rgba(250, 185, 35, 1);
  top: 80rpx;
  border-radius: 16rpx;
}
.main>p{
  display: block;
  margin: 60rpx 0;
  font-size: 38rpx;
}
.footer{
  position: fixed;
  bottom: 100rpx;
  text-align: center;
  left: 50%;
  transform: translateX(-50%);
  font-size: 38rpx;
  color: rgba(129, 129, 129, 1);
}
.footer::before{
  content: "<";
  position: relative;
  left:-120rpx;
  font-size: 45rpx;
  color: rgba(129, 129, 129, 1);
}
.footer::after{
  content: ">";
  position: relative;
  right: -100rpx;
  font-size: 45rpx;
  color: rgba(129, 129, 129, 1);
}