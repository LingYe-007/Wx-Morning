.float-ball{
  position: relative;
  padding: 0 80rpx 0rpx 80rpx;
  height: 742rpx;
  position: absolute;
  width: calc(100vw - 160rpx);
  top: 50%;
  margin: -371rpx 0 0 0rpx;
  text-align: center;
}
.float-ball>.float-item{
  box-shadow:10rpx 10rpx 20rpx #707070;
  position: absolute;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  border: 1rpx solid #707070;
  animation:Updown 1s alternate infinite;
}
@keyframes Updown{
  from{margin-top: 0px;}
  to{margin-top: -5px;margin-left: 5rpx;}
}
.float-ball :nth-child(1){
  width: 220rpx;
  height: 220rpx;
  background: #F8E57C;
}
